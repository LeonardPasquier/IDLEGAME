<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="115"
    android:background="@drawable/page_inventaire">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="84">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:text="Ordinateurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textOrdi"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@android:color/white" />

            <Button
                android:text="Item 1_1"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="85dp"
                android:id="@+id/Item1_1"
                android:background="@drawable/ordi1"
                android:paddingLeft="100dp"

                />

            <Button
                android:text="Item 1_2"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item1_2"
                android:layout_weight="0.335"
                android:background="@drawable/ordi2"
                android:paddingLeft="100dp"
                />

            <Button
                android:text="Item 1_3"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/item1_3"
                android:background="@drawable/ordi3"
                android:paddingLeft="100dp"
                />

            <TextView
                android:text="Antivirus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textAntivirus"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:text="Item 2_1"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item2_1"
                android:background="@drawable/antivirus1"
                android:paddingLeft="100dp"
                />
            <Button
                android:text="Item 2_2"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item2_2"
                android:background="@drawable/antivirus2"
                android:paddingLeft="100dp"
                />
            <Button
                android:text="Item 2_3"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item2_3"
                android:background="@drawable/antivirus3"
                android:paddingLeft="100dp"
                />

            <TextView
                android:text="Serveurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textComptable"
                android:gravity="center"
                android:textSize="25sp"
                android:textColor="@android:color/white" />

            <Button
                android:text="Item 3_1"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item3_1"
                android:background="@drawable/serveur1"
                android:paddingLeft="100dp"
                />

            <Button
                android:text="Item 3_2"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item3_2"
                android:background="@drawable/serveur2"
                android:paddingLeft="100dp"
                />

            <Button
                android:text="Item 3_3"
                android:textSize="12dp"
                android:layout_width="fill_parent"
                android:layout_height="89dp"
                android:id="@+id/Item3_3"
                android:background="@drawable/serveur3"
                android:paddingLeft="100dp"
                />


        </LinearLayout>

    </ScrollView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:weightSum="3.2">

        <Button
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/recruter"
            android:layout_weight="1"
            android:background = "@null"/>

        <Button
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/entreprise"
            android:layout_weight="1.2"
            android:background = "@null"/>

        <Button
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/inventaire"
            android:layout_weight="1"
            android:background = "@null"/>

    </LinearLayout>

</LinearLayout>