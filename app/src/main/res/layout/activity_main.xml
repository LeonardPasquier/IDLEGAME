<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="corporation.unpitch.idlegame.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="NOM DE L'ENTREPRISE"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNomEntreprise" />

        <TextView
            android:text=""
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/projet_en_cours" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_weight="0.01">

            <TextView
                android:text="Lignes de code :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textLignesDeCode"
                android:layout_weight="0.53"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compteurLignes"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:text="Clavier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/boutonClavier"
            android:layout_weight="0.99" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="Argent disponible :"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:id="@+id/textArgentDispo"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compteurArgent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Recruter"
                android:textSize="12dp"
                android:layout_height="match_parent"
                android:id="@+id/recruter"
                tools:text="Recruter"
                android:layout_width="108dp" />

            <Button
                android:text="Mon entreprise"
                android:textSize="12dp"
                android:layout_height="match_parent"
                android:id="@+id/entreprise"
                android:layout_width="108dp" />

            <Button
                android:text="Inventaire"
                android:textSize="12dp"
                android:layout_height="match_parent"
                android:id="@+id/inventaire"
                android:layout_weight="1"
                android:layout_width="108dp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
