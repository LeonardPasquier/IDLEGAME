<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="corporation.unpitch.idlegame.MainActivity"
    android:background="@drawable/ordi_principal_1">
    <!--android:background="@drawable/onglet_principal_pc1">-->

    <LinearLayout
        android:id="@+id/principalLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="60"
        android:background="@drawable/ordi_principal_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"/>

        <TextView
            android:text="NOM DE L'ENTREPRISE"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textNomEntreprise"
            android:textSize="14sp" />

        <TextView
            android:text=""
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/projet_en_cours"
            android:textSize="12sp"
            tools:text="projet" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.4"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="2.5"
            android:weightSum="2"
            android:layout_height="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textLignesDeCode"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/compteurLignes"
                android:layout_weight="1.00"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:textAlignment="center" />


        </LinearLayout>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/boutonClavier"
            android:layout_weight="34"
            android:background="@null" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="2">

            <TextView
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:id="@+id/textArgentDispo"
                android:layout_gravity="center"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/compteurArgent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="3.2"
            android:layout_weight="8.5">

            <Button
                android:text=""
                android:layout_height="match_parent"
                android:id="@+id/recruter"
                tools:text="Recruter"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@null" />

            <Button
                android:text=""
                android:layout_height="match_parent"
                android:id="@+id/entreprise"
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:background="@null" />


            <Button
                android:text=""
                android:layout_height="match_parent"
                android:id="@+id/inventaire"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:background="@null" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
