                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView31"
                            tools:text="Petit FPS" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:text="Accepter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/acc_projet1" />
            </LinearLayout>
