                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rec_projet1"
                            tools:text="Récompense :" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/debloque_projet1"
                            tools:text="Débloque :" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/lay_contenu_projet1">

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
