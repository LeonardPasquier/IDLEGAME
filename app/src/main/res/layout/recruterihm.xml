<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="Recruter du personnel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <Button
            android:text="Item 1"

            android:textSize="12dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/recrue1"
            android:layout_weight="0.335"
            android:drawableLeft="@drawable/icone_android"

            />

        <Button
            android:text="Item 2"
            android:textSize="12dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/recrue2"
            android:layout_weight="0.335"
            android:drawableLeft="@drawable/icone_android"
            />

        <Button
            android:text="Item 2"
            android:textSize="12dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/recrue3"
            android:layout_weight="0.335"
            android:drawableLeft="@drawable/icone_android"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="Recruter"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recruter"
                android:layout_weight="1" />

            <Button
                android:text="Mon entreprise"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/entreprise"
                android:layout_weight="1" />

            <Button
                android:text="Inventaire"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inventaire"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>